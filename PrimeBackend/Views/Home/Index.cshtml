<script>
    // Add a JavaScript event handler to prevent form submission when fields are empty
    document.getElementById("formDataForm").addEventListener("submit", function (event) {
        var fullName = document.querySelector("input[name='FullName']").value;
        var occupation = document.querySelector("input[name='Occupation']").value;
        var phoneNumber = document.querySelector("input[name='PhoneNumber']").value;
        const countryCodeSelect = document.getElementById('country-code').value;

        if (!fullName || !occupation || !phoneNumber || countryCodeSelect === "-1") {
            // Display the error message
            document.getElementById("error-message").style.display = "block";
            event.preventDefault(); // Prevent form submission
        }
    });
</script>

@if (ViewBag.Alert == "true")
{
    <script>
        // Wrap the alert code in a document ready function
        $(document).ready(function () {

            const Toast = Swal.mixin({
                toast: true,
                position: 'top', // Display the toast at the top
                customClass: {
                    container: 'center-toast' // Apply a custom CSS class for centering
                },
                showConfirmButton: false,
                timer: 5000,
                timerProgressBar: false,
                didOpen: (toast) => {
                    toast.addEventListener('mouseenter', Swal.stopTimer);
                    toast.addEventListener('mouseleave', Swal.resumeTimer);
                }
            });

            Toast.fire({
                icon: 'success',
                title: "Thank you! We'll get back to you soon."
            });
        });
    </script>

}
