@model FormData

<style>
    .phone {
        display: flex;
        align-items: center;
    }

    #country-code {
        padding: 10px 2px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-right: 10px;
       width:23%;
    }

    #phone-number {
        padding: 8px;
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 4px;
        flex: 2;
    }

        /* Opsiyonel: Hoover efekti */
        #country-code:hover, #phone-number:hover {
            border-color: #333;
        }
</style>
<main>
    <div class="main">
        <div class="main-text">
            <h2>Special offer in Palm Jumeirah</h2>
            <h3>Super-luxury hotel for sale</h3>
            <h4>$150,000,000</h4>
            <p>
                Own the epitome of luxury on Palm Jumeirah with our $150 million hotel. Experience the pinnacle of
                opulence and secure your place in Dubai’s most coveted real estate market today!
            </p>
            <div class="main-text-icons">
                <div><img src="./assets/img/svg/047-building-trade.svg" alt=""><span>250<span class="plus">+</span> rooms</span></div>
                <div><img src="./assets/img/svg/050-prize.svg" alt=""><span>4 star</span></div>
                <div><img src="./assets/img/svg/018-flat.svg" alt=""><span>5800<span class="plus">+</span> sqft</span></div>
                <div><img src="./assets/img/svg/046-house-4.svg" alt=""><span>ROI 8%</span></div>
            </div>
        </div>
        <div class="main-form">
            <div class="main-form-title">
                <p>Schedule a</p>
                <p> Private Viewing Today!</p>
            </div>
            <p>We’re getting back to you in a few mins.</p>
            <form asp-action="Create">
                <div class="fullName">
                    <input asp-for="FullName" type="text" placeholder="Your full name" required>
                </div>
                <div class="occupation">
                    <input asp-for="Occupation" type="text" placeholder="Occupation" required>
                </div>
                <div class="phone">
                    <select id="country-code" asp-for="CountryCode" required>
                        <option value="+44"> GB (+44)</option>
                        <option value="+1">US (+1)</option>
                        <option value="+971">AE (+971)</option>
                        <option value="+90">TR (+90)</option>
                        <option value="+966">SAU (+966)</option>
                        <option value="+33">FR (+33)</option>
                        <option value="+49">DE (+49)</option>
                        <option value="+91">IND (+91)</option>
                        <option value="+965">KW (+965)</option>
                        <!-- Diğer ülke kodları için daha fazla seçenek ekleyin -->
                    </select>
                    <input id="phone-number" type="text" asp-for="PhoneNumber" placeholder="Phone number" required>
                </div>
                <div class="btn-call">
                    <button type="submit">CALL ME</button>
                </div>
            </form>
        </div>
    </div>
</main>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.all.min.js"></script>


<style>

    .center-toast {
        position: fixed;
        top: 8% !important;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    }
</style>
